{{define "yield"}}
<div class="auth-page">
  <div class="container">
    <a href="{{rootURL}}">
      {{template "logo" .}}
    </a>

    <h1 class="heading">Sign in to Dnote</h1>

    <div class="body">
      {{if .Referrer}}
        <div class="alert alert-info" role="alert">
          Please sign in to continue to that page.
        </div>
      {{end}}

      <div class="panel">
        {{if .Alert}}
          <div class="alert alert-danger" role="alert">
            {{.Alert.Message}}
          </div>
        {{end}}

        {{template "loginForm" .}}
      </div>
    </div>

    <div class="footer">
      <div class="callout">Don&#39;t have an account?</div>
      <a href="/join" class="cta">
        Create account
      </a>
    </div>
  </div>
</div>
{{end}}

{{define "loginForm"}}
<form action="{{ if .Referrer }} {{ getPathWithReferrer "/login" .Referrer }} {{else}} /login {{end}}" method="POST">
  {{csrfField}}

  <div class="input-row">
    <label for="email-input" class="label">
      Email
      <input
        tabindex="1"
        id="email-input"
        name="email"
        type="email"
        placeholder="you@example.com"
        class="form-control"
        value="{{.Email}}"
      />
    </label>
  </div>

  <div class="input-row">
    <label for="password-input" class="label">
      Password
      <a href="/password-reset" class="forgot">
        Forgot?
      </a>
      <input
        tabindex="2"
        id="password-input"
        name="password"
        type="password"
        placeholder="&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;"
        class="form-control"
      />
    </label>
  </div>

  <button tabindex="3" type="submit" class="auth-button button button-normal button-stretch button-first">Sign In</button>
</form>
{{end}}
